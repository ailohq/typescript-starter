{
  "name": "@ailo/typescript-starter",
  "version": "1.0.0",
  "description": "Ailo TypeScript starter",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/ailohq/typescript-starter",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint . --fix",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier \"src/**/*.ts\" --list-different",
    "lint:eslint": "eslint .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch",
    "start": "run-s clean build:main && run-p \"build:main -- -w\" \"test:watch\"",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "clean": "trash build test",
    "prepare-release": "run-s reset lint test build version",
    "release": "yarn prepare-release && git push --follow-tags origin master --no-verify && yarn publish --non-interactive",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('@ailo/typescript-starter must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "sh -c '[ $(git rev-parse --abbrev-ref HEAD) != \"master\" ] || ./go'"
    }
  },
  "lint-staged": {
    "*.{json,css,md}": "prettier --write",
    "./src/**/*.{js,ts}": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@ailo/ailorn": "1.0.52"
  },
  "devDependencies": {
    "@ailo/eslint-config": "1.0.1",
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@types/jest": "26.0.3",
    "codecov": "^3.7.1",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "7.3.1",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.1",
    "trash-cli": "^3.0.0",
    "ts-jest": "26.1.1",
    "typescript": "^3.9.5"
  }
}
